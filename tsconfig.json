{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "esModuleInterop": true,
    "target": "ES2022",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "incremental": true,

    "verbatimModuleSyntax": true,
    "erasableSyntaxOnly": true,

    "rootDir": "src",
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "include": ["src/**/*.ts"]
}
